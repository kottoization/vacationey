@page
@model LogoutModel

<header>
    <h1>            Are you sure you want to log out? 
        If so click the button under our logo, see you soon again!";
</h1>
    <img src="~/images/icons/logo.png" class="logovacationey" alt="vacationey logo">
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link btnlogout center">Logout</button>
            </form> 
        }
        else
        {
            <p>You have successfully logged out of the application!</p>
        }
    }
</header>
