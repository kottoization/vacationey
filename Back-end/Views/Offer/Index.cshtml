@model IEnumerable<Backend.Models.ViewModels.OfferViewModel>


<div id="landing-page">
    <img src="/images/photos/test1.jpg" alt="Hello">
</div>


<div class="query" id="query-filters">

    <div class="filter">
        <p>
            Country
        </p>

        <select id="selectCountry" asp-items=@ViewBag.Countries>
            <option>All</option>
        </select>
    </div>

    <div class="filter">
        <p>
            Price
        </p>
        <select id="priceOrder" asp-items=@ViewBag.Orders>
                <option></option>
        </select>
    </div>

    <div class="filter">
        <p>
            From
        </p>

        <select id="selectFrom" asp-items=@ViewBag.CitiesFrom>
            <option>All</option>
        </select>
    </div>

    <div class="filter">
        <p>
            To
        </p>
        <select id="selectTo" asp-items=@ViewBag.CitiesTo>
            <option>All</option>
        </select>
    </div>

    <input class="submit" type="submit" onclick="submitFormOffer(0)" value="Filter" />
</div>


@foreach (var item in Model)
{
    <partial name="Offer" model=item />
}

@try
{
    Model.First();

    <div class="buttons">
        <a id="prevPage" onclick="submitFormOffer(-1)"> &lt; </a>
        <a id="nextPage" onclick="submitFormOffer(1)"> > </a>
    </div>


}
catch { }

