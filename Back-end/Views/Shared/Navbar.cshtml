

<header>

    <nav class="menu" id="bigMenu">
        <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
            VACATIONEY
        </a>

        @if (!User.Identity.IsAuthenticated)
        {

            <div class="dropdown">
                <div class="dropbtn">Login</div>
                <div class="dropdown-content">
                    <a class="dropbtn" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    <a class="dropbtn" asp-area="Identity" asp-page="/Account/Register">Register</a>

                </div>
            </div>
        }
        else
        {
            <div class="dropdown">
                <a class="dropbtn" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">Logout</a>
            </div>
        }


        <div class="dropdown">
            <a class="dropbtn" asp-area="" asp-controller="Offer" asp-action="Index">Offers</a>
        </div>
    </nav>

</header>
