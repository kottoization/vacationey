@model Backend.Models.ViewModels.CreateCityViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create City</h1>

<hr />

<div class="createForm" id="createCity">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="CityName" class="control-label">Name</label>
            <input asp-for="CityName" class="form-control" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CountryName" class="control-label">Country</label>
            <select asp-for="CountryName" class="form-control" asp-items="ViewBag.Countries"></select>
            <span asp-validation-for="CountryName" class="text-danger"></span>
        </div>

        <div>
            <button id="submitCreate" title="forCity" type="submit">Save</button>
        </div>
    </form>
</div>
