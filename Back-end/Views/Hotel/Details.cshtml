@model Backend.Models.ViewModels.HotelViewModel
@{
    string YesNo(bool active)
    {
        return active ? "Yes" : "No";
    }

    string[] files = Directory.GetFiles("wwwroot/images/hotels");
    int count = files.Count();
    var random = new Random();
    var photoID = random.Next(0, count);
    var path = files[photoID][7..];

}
@if (Model.Hotel != null)
{

    <div class="details">
        <img src=@path />
        <div class="infoDetails">
            <div class="textInfo">
                <p>
                    Name: &nbsp;&nbsp; @Model.Hotel.Name

                </p>
                <p>
                    City: &nbsp;&nbsp;
                    @if (Model.City != null)
                    {
                        @Model.City.Name
                    }
                </p>

                <p id="stars">
                    @for (int i = 0; i < Model.Hotel.Rate; i++)
                    {
                        <span class="star">&#9733;</span>
                    }
                    @for (int i = Model.Hotel.Rate; i < 5; i++)
                    {
                        <span class="star">&#9734;</span>
                    }

                </p>
                <p>
                    Wi-Fi: &nbsp;&nbsp;  @YesNo(Model.Hotel.WiFi)
                </p>
                <p>
                    Pool: &nbsp;&nbsp;  @Model.Hotel.Pool
                </p>
            </div>

            <div class="details-links">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <a asp-area="" asp-controller="Hotel" asp-action="Edit" asp-route-id=@Model.Hotel.HotelId>Edit</a>
                }
                <a asp-area="" asp-controller="Offer" asp-action="Index" asp-route-hotelId=@Model.Hotel.HotelId asp-route-page=1>Offers</a>
                <a onclick="window.history.back()">Back To List</a>
            </div>

        </div>
    </div>

}





